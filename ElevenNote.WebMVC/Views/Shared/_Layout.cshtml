<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/fontawesome")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top efa-red">
        @Html.ActionLink("11Note", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" data-toggle="collapse" data-target="#layoutNavbarSupportedContent"
                aria-controls="layoutNavbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-link">@Html.ActionLink("Home", "Index", "Home")</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-link">@Html.ActionLink("Notes", "Index", "Note")</li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-link">@Html.ActionLink("Categories", "Index", "Category")</li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-link">@Html.ActionLink("Users", "Index", "Account")</li>
                }
                <li class="nav-link">@Html.ActionLink("About", "About", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
